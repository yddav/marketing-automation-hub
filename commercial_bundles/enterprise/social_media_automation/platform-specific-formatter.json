{
  "id": "platform-specific-formatter",
  "type": "content_formatting_system",
  "platform": ["instagram", "twitter", "facebook", "linkedin"],
  "audience": {
    "primary": "automation_system",
    "secondary": ["content_creators", "social_media_managers"],
    "demographics": {
      "age_range": "all",
      "interests": ["automation", "social_media", "content_optimization"],
      "tech_savviness": "advanced"
    }
  },
  "content": {
    "template": "Multi-platform content formatting automation",
    "formatting_rules": {
      "instagram": {
        "character_limits": {
          "caption": 2200,
          "bio": 150,
          "story_text": 2200,
          "hashtags_recommended": 30
        },
        "formatting_style": {
          "emoji_usage": "encouraged",
          "line_breaks": "double_line_spacing",
          "hashtag_placement": "end_of_caption",
          "cta_placement": "prominent_middle_or_end",
          "visual_elements": "required"
        },
        "content_adaptations": {
          "feature_showcase": {
            "structure": "hook_explanation_benefit_cta",
            "visual_requirement": "feature_screenshot_or_demo",
            "engagement_elements": ["emoji_bullets", "question_hook", "save_cta"]
          },
          "behind_scenes": {
            "structure": "story_hook_process_insight_personal_touch",
            "visual_requirement": "candid_photo_or_video",
            "engagement_elements": ["story_telling", "relatable_content", "comment_encouragement"]
          },
          "user_testimonial": {
            "structure": "user_quote_context_social_proof_cta",
            "visual_requirement": "user_screenshot_or_photo",
            "engagement_elements": ["social_proof", "community_celebration", "share_encouragement"]
          }
        }
      },
      "twitter": {
        "character_limits": {
          "tweet": 280,
          "thread_tweet": 280,
          "bio": 160,
          "hashtags_recommended": 3
        },
        "formatting_style": {
          "brevity": "essential",
          "hashtag_placement": "integrated_naturally",
          "thread_structure": "numbered_or_connected",
          "engagement_hooks": "questions_or_controversial_statements"
        },
        "content_adaptations": {
          "quick_tip": {
            "structure": "hook_tip_application_hashtag",
            "engagement_elements": ["actionable_advice", "thread_potential", "retweet_worthy"]
          },
          "thread_starter": {
            "structure": "compelling_hook_thread_preview_1_n",
            "engagement_elements": ["curiosity_gap", "value_promise", "thread_continuation"]
          },
          "feature_announcement": {
            "structure": "news_benefit_visual_link",
            "engagement_elements": ["breaking_news_feel", "immediate_value", "clear_cta"]
          }
        }
      },
      "facebook": {
        "character_limits": {
          "post": 63206,
          "optimal_length": 80,
          "hashtags_recommended": 5
        },
        "formatting_style": {
          "conversational_tone": "friendly_and_personal",
          "paragraph_structure": "short_digestible_chunks",
          "visual_emphasis": "photos_videos_preferred",
          "community_focus": "discussion_encouragement"
        },
        "content_adaptations": {
          "community_question": {
            "structure": "context_question_engagement_encouragement",
            "engagement_elements": ["open_ended_questions", "comment_starters", "shareable_content"]
          },
          "feature_demo": {
            "structure": "problem_solution_demo_cta",
            "visual_requirement": "video_demonstration_preferred",
            "engagement_elements": ["problem_relatability", "clear_solution", "video_content"]
          }
        }
      },
      "linkedin": {
        "character_limits": {
          "post": 3000,
          "optimal_length": 150,
          "hashtags_recommended": 10,
          "article": 125000
        },
        "formatting_style": {
          "professional_tone": "authoritative_yet_approachable",
          "industry_insight": "thought_leadership_focus",
          "networking_emphasis": "professional_connection",
          "value_driven": "business_benefit_focus"
        },
        "content_adaptations": {
          "thought_leadership": {
            "structure": "industry_insight_personal_experience_actionable_advice",
            "engagement_elements": ["professional_credibility", "industry_trends", "actionable_insights"]
          },
          "company_update": {
            "structure": "milestone_context_team_credit_future_vision",
            "engagement_elements": ["company_growth", "team_appreciation", "industry_impact"]
          }
        }
      }
    },
    "cross_platform_adaptation": {
      "content_repurposing": {
        "long_form_to_short": {
          "method": "key_points_extraction",
          "maintain_elements": ["core_message", "cta", "brand_voice"],
          "adapt_elements": ["length", "hashtags", "visual_requirements"]
        },
        "visual_content_adaptation": {
          "instagram": "square_1080x1080_carousel_option",
          "twitter": "horizontal_1200x675_gif_friendly",
          "facebook": "multiple_formats_video_preferred",
          "linkedin": "professional_1200x627_industry_relevant"
        }
      },
      "message_consistency": {
        "core_value_proposition": "maintain_across_platforms",
        "brand_voice": "adapt_tone_keep_personality",
        "call_to_action": "platform_specific_optimization",
        "hashtag_strategy": "platform_appropriate_selection"
      }
    }
  },
