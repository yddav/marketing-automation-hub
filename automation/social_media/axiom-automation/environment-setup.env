# AXIOM.AI AUTOMATION ENVIRONMENT VARIABLES
# Copy to .env and fill in your actual values

# Google Sheets Integration (Required)
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_SHEETS_ID=your-spreadsheet-id-here

# Social Media Accounts (For Reference)
INSTAGRAM_USERNAME=untrapd.hub
FACEBOOK_PAGE_NAME=un trapd
PINTEREST_USERNAME=untrapd.hub
REDDIT_USERNAME=your-reddit-username

# FINDERR Integration (Optional - for milestone automation)
FINDERR_API_BASE=https://hub.untrapd.com/api
MILESTONE_WEBHOOK_URL=https://hub.untrapd.com/webhooks/milestone
CURRENT_USER_COUNT=0
LIFETIME_SPOTS_REMAINING=2000

# Axiom.ai Configuration
AXIOM_RUNTIME_BUDGET=120  # 2 hours in minutes
AXIOM_BOT_PREFIX=untrapd_hub_
AXIOM_WORKSPACE_ID=your-axiom-workspace-id

# Development Settings
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=info