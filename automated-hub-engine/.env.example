# ==================== AUTOMATED HUB ENGINE CONFIGURATION ====================

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME="Automated Hub Engine"
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=32-character-encryption-key-here
API_KEY_SECRET=your-api-key-secret-for-external-integrations

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/automated_hub_engine
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for queues and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Frontend Configuration
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3001

# ==================== PLATFORM INTEGRATIONS ====================

# Email (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@automated-hub-engine.com
SENDGRID_FROM_NAME="Automated Hub Engine"

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Intercom Integration
INTERCOM_ACCESS_TOKEN=your-intercom-access-token
INTERCOM_ADMIN_ID=your-intercom-admin-id
INTERCOM_APP_ID=your-intercom-app-id

# Firebase/FCM (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Segment (Analytics)
SEGMENT_WRITE_KEY=your-segment-write-key
SEGMENT_SOURCE_ID=your-segment-source-id

# ==================== MONITORING & OBSERVABILITY ====================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0

# DataDog (Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME="Automated Hub Engine"

# ==================== SYSTEM CONFIGURATION ====================

# Performance Settings
MAX_CONCURRENT_CAMPAIGNS=50
INTERACTION_CAPACITY_PER_HOUR=100000
RATE_LIMIT_PER_PLATFORM=1000
RETRY_ATTEMPTS=3

# Onboarding Settings
ACTIVATION_THRESHOLD=0.8
TIME_TO_VALUE_TARGET=300
INTERVENTION_DELAY=30

# Campaign Settings
EMAIL_BATCH_SIZE=100
PUSH_BATCH_SIZE=1000
SMS_BATCH_SIZE=100
WEBHOOK_BATCH_SIZE=500

# Analytics Settings
REAL_TIME_UPDATES=true
DATA_RETENTION_DAYS=365
METRICS_COLLECTION_INTERVAL=300000

# Crisis Management
AUTO_RESPONSE_ENABLED=true
ESCALATION_THRESHOLD=0.7
CAPACITY_WARNING_THRESHOLD=0.8

# ==================== EXTERNAL SERVICES ====================

# Webhooks for Integration
MAH_WEBHOOK_URL=https://your-marketing-automation-hub.com/webhooks/ahe
CUSTOMER_WEBHOOK_URL=https://your-customer-system.com/webhooks/ahe

# API Endpoints for Integration
AUTOMATED_HUB_ENGINE_API_URL=https://api.automated-hub-engine.com
MARKETING_AUTOMATION_HUB_API_URL=https://api.marketing-automation-hub.com

# Authentication for Cross-System Integration
AHE_API_TOKEN=your-ahe-api-token-for-external-access
MAH_API_TOKEN=your-mah-api-token-for-integration
INTEGRATION_JWT_SECRET=your-integration-jwt-secret

# ==================== DEVELOPMENT SETTINGS ====================

# Development Tools
DEBUG=ahe:*
VERBOSE_LOGGING=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/ahe_test
TEST_REDIS_URL=redis://localhost:6379/1
DISABLE_RATE_LIMITING_IN_TESTS=true

# Local Development
SKIP_EMAIL_SENDING=false
MOCK_EXTERNAL_APIS=false
ENABLE_DEV_SEED_DATA=true

# ==================== PRODUCTION OVERRIDES ====================

# Security (Production Only)
# FORCE_HTTPS=true
# TRUST_PROXY=true
# SECURE_COOKIES=true

# Performance (Production Only)  
# ENABLE_COMPRESSION=true
# ENABLE_CACHING=true
# CACHE_TTL=3600

# Monitoring (Production Only)
# ENABLE_REQUEST_LOGGING=true
# LOG_LEVEL=info
# HEALTH_CHECK_INTERVAL=30000

# ==================== FEATURE FLAGS ====================

# Beta Features
ENABLE_PREDICTIVE_CHURN=true
ENABLE_ADVANCED_PERSONALIZATION=true
ENABLE_CRISIS_AUTO_RESPONSE=true
ENABLE_CROSS_PLATFORM_SYNC=true

# Experimental Features
ENABLE_AI_CONTENT_GENERATION=false
ENABLE_VOICE_INTERACTIONS=false
ENABLE_VIDEO_ONBOARDING=false
ENABLE_AUGMENTED_ANALYTICS=false

# ==================== COMPLIANCE & SECURITY ====================

# Data Privacy
GDPR_COMPLIANCE_MODE=true
CCPA_COMPLIANCE_MODE=true
DATA_ANONYMIZATION_ENABLED=true
AUTO_DELETE_INACTIVE_USERS=true

# Security Features
ENABLE_2FA=true
PASSWORD_COMPLEXITY_REQUIRED=true
SESSION_TIMEOUT_MINUTES=60
FAILED_LOGIN_ATTEMPTS_LIMIT=5

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555
SENSITIVE_DATA_MASKING=true