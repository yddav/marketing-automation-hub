# Staging Environment Variables
# Copy these to your Netlify staging site environment variables

# Environment Settings
ENVIRONMENT=staging
DEBUG=true
NODE_ENV=development

# Kit/ConvertKit Integration (Staging)
KIT_API_KEY=your_kit_api_key_here
KIT_API_URL=https://api.kit.com/v3
KIT_APPFINDER_FORM_ID=your_staging_appfinder_form_id
KIT_SHOP_FORM_ID=your_staging_shop_form_id
KIT_NEWSLETTER_FORM_ID=your_staging_newsletter_form_id
KIT_CONTACT_FORM_ID=your_staging_contact_form_id

# Analytics (Staging)
GA4_MEASUREMENT_ID=G-S9K12W3PHT
GA4_API_SECRET=your_ga4_api_secret_staging
ANALYTICS_DEBUG=true

# Marketing Automation Integration (Staging)
MARKETING_AUTOMATION_WEBHOOK=https://your-staging-automation-webhook
MARKETING_AUTOMATION_WEBHOOK_SECRET=staging_webhook_secret
MARKETING_AUTOMATION_ANALYTICS_ENDPOINT=https://your-staging-analytics-endpoint
MARKETING_AUTOMATION_AB_TEST_ENDPOINT=https://your-staging-ab-test-endpoint

# Staging-Specific Settings
STAGING_MODE=true
TEST_EMAIL_OVERRIDE=test@yourdomain.com
MOCK_EMAIL_SENDING=true
VERBOSE_LOGGING=true
RATE_LIMIT_BYPASS=true

# Testing Configuration
TEST_USER_PREFIX=staging_test_
AB_TEST_FORCE_VARIANT=A
ANALYTICS_SAMPLING_RATE=100
ERROR_REPORTING=detailed

# Security (Relaxed for testing)
CORS_ORIGINS=*
CSRF_PROTECTION=false
WEBHOOK_VERIFICATION=false

# Performance Testing
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_LIMIT_WARNING=256
CPU_USAGE_ALERT=80