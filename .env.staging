# Marketing Automation Hub - Staging Environment Configuration
# This file contains staging-specific environment variables for development and testing

# Application Configuration
NODE_ENV=staging
PORT=3001
APP_NAME="Marketing Automation Hub - Staging"
APP_URL=http://localhost:3001

# Database Configuration - Staging
DATABASE_URL=sqlite:./data/staging_customers.db
REDIS_URL=redis://localhost:6379/1

# Email Service Configuration - Test/Staging
EMAIL_PROVIDER=mailchimp
MAILCHIMP_API_KEY=your_staging_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us21
MAILCHIMP_LIST_ID=your_staging_list_id_here

# SendGrid Fallback (for staging tests)
SENDGRID_API_KEY=your_staging_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=staging@marketingautomationhub.com
SENDGRID_FROM_NAME="Marketing Hub Staging"

# Social Media API Keys - Staging/Test Accounts
INSTAGRAM_ACCESS_TOKEN=your_staging_instagram_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_staging_business_account_id_here

TWITTER_API_KEY=your_staging_twitter_api_key_here
TWITTER_API_SECRET=your_staging_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_staging_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_staging_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_staging_twitter_bearer_token_here

FACEBOOK_ACCESS_TOKEN=your_staging_facebook_access_token_here
FACEBOOK_PAGE_ID=your_staging_facebook_page_id_here

LINKEDIN_ACCESS_TOKEN=your_staging_linkedin_access_token_here
LINKEDIN_PERSON_ID=your_staging_linkedin_person_id_here

# Payment Processing - Staging (Gumroad Sandbox)
GUMROAD_ACCESS_TOKEN=your_staging_gumroad_access_token_here
GUMROAD_WEBHOOK_SECRET=your_staging_webhook_secret_here

# Analytics Configuration - Staging
GOOGLE_ANALYTICS_ID=GA_STAGING_ID
MIXPANEL_TOKEN=your_staging_mixpanel_token_here
HOTJAR_ID=your_staging_hotjar_id_here

# Feature Flags for Staging
ENABLE_DEBUG_LOGGING=true
ENABLE_ANALYTICS_COLLECTION=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_SOCIAL_MEDIA_POSTING=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_A_B_TESTING=true

# Rate Limiting Configuration - More Lenient for Staging
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Staging-Specific Settings
STAGING_MODE=true
DISABLE_EXTERNAL_APIS=false
MOCK_PAYMENT_PROCESSING=true
TEST_EMAIL_RECIPIENT=staging-test@marketingautomationhub.com

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/staging.log

# Security Configuration - Less Strict for Staging
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
JWT_SECRET=your_staging_jwt_secret_here
SESSION_SECRET=your_staging_session_secret_here

# Bundle Configuration - Staging Versions
STARTER_BUNDLE_PRICE=99
PROFESSIONAL_BUNDLE_PRICE=149
ENTERPRISE_BUNDLE_PRICE=299

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
WEBPACK_DEV_SERVER=true