# Production Environment Variables
# Copy these to your Netlify production site environment variables

# Environment Settings
ENVIRONMENT=production
DEBUG=false
NODE_ENV=production

# Kit/ConvertKit Integration (Production)
KIT_API_KEY=your_production_kit_api_key
KIT_API_URL=https://api.kit.com/v3
KIT_APPFINDER_FORM_ID=your_production_appfinder_form_id
KIT_SHOP_FORM_ID=your_production_shop_form_id
KIT_NEWSLETTER_FORM_ID=your_production_newsletter_form_id
KIT_CONTACT_FORM_ID=your_production_contact_form_id

# Analytics (Production)
GA4_MEASUREMENT_ID=G-S9K12W3PHT
GA4_API_SECRET=your_production_ga4_api_secret
ANALYTICS_DEBUG=false

# Marketing Automation Integration (Production)
MARKETING_AUTOMATION_WEBHOOK=https://your-production-automation-webhook
MARKETING_AUTOMATION_WEBHOOK_SECRET=production_webhook_secret_very_secure
MARKETING_AUTOMATION_ANALYTICS_ENDPOINT=https://your-production-analytics-endpoint
MARKETING_AUTOMATION_AB_TEST_ENDPOINT=https://your-production-ab-test-endpoint

# Production Settings
STAGING_MODE=false
MOCK_EMAIL_SENDING=false
VERBOSE_LOGGING=false
RATE_LIMITING=true

# Security (Strict for production)
CORS_ORIGINS=https://untrapd.com,https://app.untrapd.com,https://shop.untrapd.com
CSRF_PROTECTION=true
WEBHOOK_VERIFICATION=true
SECURE_HEADERS=true

# Performance (Optimized)
ANALYTICS_SAMPLING_RATE=10
ERROR_REPORTING=minimal
CACHING_ENABLED=true
CDN_OPTIMIZATION=true

# Monitoring
PERFORMANCE_MONITORING=true
UPTIME_MONITORING=true
ERROR_TRACKING=true
SLOW_QUERY_THRESHOLD=500
MEMORY_LIMIT_WARNING=512
CPU_USAGE_ALERT=70