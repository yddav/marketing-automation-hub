# App Marketing Automation Hub - Environment Configuration
# Agent B - Phase 2 API Integration Setup
# Copy this file to .env and fill in your actual API credentials

# =========================
# EMAIL SERVICE PROVIDERS
# =========================
# Choose ONE primary email service provider

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us1

# ConvertKit Configuration  
CONVERTKIT_API_KEY=your_convertkit_api_key_here
CONVERTKIT_API_SECRET=your_convertkit_api_secret_here

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# =========================
# SOCIAL MEDIA APIS
# =========================

# Instagram Basic Display API
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Twitter API v2
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# =========================
# ANALYTICS & TRACKING
# =========================

# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
GOOGLE_ANALYTICS_CLIENT_EMAIL=your_service_account@your-project.iam.gserviceaccount.com
GOOGLE_ANALYTICS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# =========================
# DATABASE & CACHE
# =========================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/marketing_automation_hub

# Redis Cache
REDIS_URL=redis://localhost:6379

# =========================
# APPLICATION SETTINGS
# =========================

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =========================
# PAYMENT SYSTEM - AGENT BRAVO
# =========================

# Gumroad Payment Processing
GUMROAD_WEBHOOK_SECRET=your_gumroad_webhook_secret_here
BASE_URL=https://your-domain.com
ADMIN_KEY=your_secure_admin_key_change_this_in_production
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# Payment Product Configuration
STARTER_BUNDLE_PRICE=199
PROFESSIONAL_BUNDLE_PRICE=299
ENTERPRISE_BUNDLE_PRICE=597

# Download Security
DOWNLOAD_EXPIRY_DAYS=7
MAX_DOWNLOADS_PER_PURCHASE=5

# Revenue Targets (for analytics)
CONSERVATIVE_MONTHLY_TARGET=13445
OPTIMISTIC_MONTHLY_TARGET=22905
STRETCH_MONTHLY_TARGET=62000

# =========================
# INTEGRATION SETTINGS
# =========================

# =========================
# UNTRAPD ECOSYSTEM CONFIG
# =========================

# Untrapd Brand Configuration
DEFAULT_APP_NAME=AppFinder
DEFAULT_COMPANY_NAME=Untrapd
DEFAULT_SENDER_NAME=The Untrapd Team
DEFAULT_SENDER_TITLE=Community Manager
DEFAULT_APP_URL=https://hub.untrapd.com

# Email Template Configuration
EMAIL_FROM_ADDRESS=hello@untrapd.com
EMAIL_FROM_NAME=The Untrapd Team
EMAIL_REPLY_TO=support@untrapd.com

# Untrapd Platform URLs
HUB_WEBSITE_URL=https://hub.untrapd.com
APPFINDER_IOS_URL=https://apps.apple.com/app/appfinder
APPFINDER_ANDROID_URL=https://play.google.com/store/apps/details?id=com.untrapd.appfinder
ETSY_SHOP_URL=https://www.etsy.com/shop/SuperHyperCar
COMMUNITY_FORUM_URL=https://hub.untrapd.com/community

# Social Media Handles
INSTAGRAM_HANDLE=@untrapd
TWITTER_HANDLE=@untrapdapps
FACEBOOK_PAGE_NAME=Untrapd
LINKEDIN_COMPANY_PAGE=untrapd

# Cross-Platform Integration
CROSS_PROMOTION_ENABLED=true
ECOSYSTEM_TRACKING_ENABLED=true
MULTI_PLATFORM_ANALYTICS=true

# =========================
# DEVELOPMENT SETTINGS
# =========================

# Webhook URLs for development
WEBHOOK_BASE_URL=http://localhost:3000
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Testing
TEST_EMAIL_ADDRESS=test@example.com
ENABLE_TEST_MODE=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log